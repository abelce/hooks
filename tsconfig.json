{
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "noImplicitThis": false,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "**/__tests__",
    "test",
    "docs",
    "tests",
    "demos",
    "coverage",
    "jest.config.ts"
  ]
}
