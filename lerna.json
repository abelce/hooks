{
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": ["canary", "beta", "build/hooks"],
      "ignoreChanges": ["**/*.md", "**/demos/**"],
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "registry": "http://registry.npm.al.com"
    }
  }
}
